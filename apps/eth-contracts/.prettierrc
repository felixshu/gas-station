{
	"plugins": [
		"prettier-plugin-solidity"
	],
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": false,
	"semi": true,
	"singleQuote": false,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"printWidth": 100,
				"tabWidth": 4,
				"useTabs": false,
				"singleQuote": false,
				"bracketSpacing": true
			}
		}
	]
}